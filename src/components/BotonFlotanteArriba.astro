<button id="btnScrollToTop" class="scroll-to-top-btn">&#8593;</button>

<style>
    .scroll-to-top-btn {
        position: fixed;
        bottom: 80px;
        right: 20px;
        width: 50px;
        height: 50px;
        background-color: #029cd6;
        color: white;
        border: none;
        border-radius: 50%;
        font-size: 24px;
        cursor: pointer;
        display: none; /* Ocultar inicialmente el bot贸n */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); /* Sombras: desplazamiento horizontal (0px), desplazamiento vertical (4px), desenfoque (8px), color (negro con 30% de opacidad) */
    }

    @media (max-width: 768px) {
        .scroll-to-top-btn {
            bottom: 20px;
        }
    }

    .scroll-to-top-btn:hover {
        background-color: #0056b3;
    }
</style>

<script>
    document.addEventListener("astro:page-load", () => {
        const btnScrollToTop = document.getElementById(
            "btnScrollToTop",
        ) as HTMLButtonElement;

        // Mostrar el bot贸n cuando el usuario se desplaza hacia abajo
        window.onscroll = () => {
            if (
                document.body.scrollTop > 20 ||
                document.documentElement.scrollTop > 20
            ) {
                btnScrollToTop.style.display = "block";
            } else {
                btnScrollToTop.style.display = "none";
            }
        };

        // Desplazar hacia arriba cuando se hace clic en el bot贸n con animaci贸n suave
        btnScrollToTop.addEventListener("click", () => {
            window.scrollTo({
                top: 0,
                behavior: "smooth", // Establece el comportamiento de desplazamiento como suave
            });
        });
    });
</script>
